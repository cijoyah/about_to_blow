<div class="lightgrey_background">
  <div class="wrapper_skinny nav_drop">
    
    <div class="user_show">
      <div class="user_show_banner">
        <%= image_tag @user.avatar.url(:medium) %>
        <h1 class="user_show_username"><%= @user.username %></h1>
        <div class="user_show_location"><%= @user.location %></div>
        <div class="user_show_banner_links">
          <a href="follow" class="user_show_banner_link">Follow</a>
          <a href="follow" class="user_show_banner_link">Link</a>
          <a href="follow" class="user_show_banner_link">Button</a>
        </div>
      </div>

      <div class="breadcrumb">
        <%= link_to users_path do %>
          All Users
          <span> / </span>
          <%= link_to @user.username, user_path(@user) %>
        <% end %>
      </div>

      <div class="user_show_playlists">
        <ul class="cf">
          <% @playlists.each do |playlist| %>
            <li class="cf">
              <div class="playlist_thumbnail">
                <%= image_tag playlist.avatar.url(:medium) %> 
              </div>
              <div class="playlist_overview">
                <h2 class="playlist_overview_title">
                  <%= link_to playlist.title, user_playlist_path(@user, playlist) %>
                </h2>
                <p class='playlist_overview_description'>
                  <%= truncate(playlist.description, length: 260) %>
                  <%#= render 'playlists/player' %>
                </p>
              </div>
            </li>
          <% end %>
        </ul>
      </div>
    </div>
  </div>
</div>